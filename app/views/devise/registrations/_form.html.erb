  <%= render 'shared/form_errors' %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="form-group">
    <%= f.label :is_cites_authority, class: "col-sm-2 control-label" do %>
      I represent a CITES Authority
    <% end %>
    <div class="col-sm-10">
      <%= f.select :is_cites_authority, options_for_select(
        [['Yes', true], ['No', false]], f.object.is_cites_authority
        ), class: "form-control", include_blank: 'Please select' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :organisation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :organisation,
      class: "form-control", data: {tags: @organisations.map{|o| {id: o, text: o}}} %></div>
  </div>

  <div class="form-group">
    <%= f.label :country, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :geo_entity_id, options_for_select(
        @countries["geo_entities"].map{ |c| [c["name"],c["id"]]}, f.object.geo_entity_id
        ), class: "form-control", include_blank: 'Please select' %>
    </div>
  </div>